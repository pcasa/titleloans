<div id="dashboard-tasks">
	<table cellspacing="10" border="0" width="100%">
		<tr valign=TOP>
			<td>
				
			<div id="overdue-tasks"><%= render :partial => "tasks/tasks_show", :locals => { :tasks => @tasks.pending.overdue, :title => "overdue" }%></div>	
			<div id="due-today-tasks"><%= render :partial => "tasks/tasks_show", :locals => { :tasks => @tasks.pending.due_today, :title => "due_today" }%></div>
			</td>
		</tr>
	</table>
</div>

<ul id="dashboard">
	<li><%= link_to image_tag("/images/icons/32/vcard.png", :size => "32x32", :class => "dashIcon") + "Customers" + "<br />
	<div class='subText'>See customers and all there details.</div>".html_safe, company_customers_path(current_company) %></li>
	<li><%= link_to image_tag("/images/icons/32/curriculum_vitae.png", :size => "32x32", :class => "dashIcon") + "Title Loans" + "<br /><div class='subText'>See All Title Loans.</div>".html_safe, company_title_loans_path %></li>
	<% if current_user.is?(:manager) || current_user.is?(:admin) %>
		<li><%= link_to image_tag("/images/icons/32/money_bag.png", :size => "32x32", :class => "dashIcon") + " Orders" + "<br /><div class='subText'>See All orders that have been closed.</div>".html_safe, company_orders_path %></li>
		<li><%= link_to image_tag("/images/icons/32/user.png", :size => "32x32", :class => "dashIcon") + "Employees" + "<br />
		<div class='subText'>See All employees.</div>".html_safe, company_users_path %></li>
		<% if current_user.is?(:admin) %>
		<li><%= link_to image_tag("/images/icons/32/building.png", :size => "32x32", :class => "dashIcon") + "Companies"	 + "<br /><div class='subText'>Create, edit and see all companies.</div>".html_safe, :controller => '/companies', :action => 'index' %></li>
		<% end %>
	<% end %>
</ul>