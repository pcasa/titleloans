$(".new-task-form").slideUp();
    $("#overdue-tasks").html("<%= escape_javascript(render(:partial => "tasks/tasks_show", :locals => { :tasks => current_tasks.overdue, :title => "overdue" })) %>").effect("highlight", {color:"#b1b1b1"}, 3000);

	$("#due-today-tasks").html("<%= escape_javascript(render(:partial => "tasks/tasks_show", :locals => { :tasks => current_tasks.due_today, :title => "due_today" })) %>").effect("highlight", {color:"#b1b1b1"}, 3000);


$('#basic-tasks').append("<%= escape_javascript(render :partial => "common/task", :locals => { :task => @task } ) %>"); // Insert the _comment partial at the bottom of the comments list
$('.task').last().effect("highlight", {}, 2500);

$("#flash_notice").hide(300);
$("#task_errors").html("");
$("#task_errors").show(300);





<% if @task.errors.any? -%>
  $("#flash_notice").hide(300);
  $("#task-errors").html("<%= escape_javascript(error_messages_for(@task))%>").hide();
  $("#task-errors").slideDown('slow');
<% else %>
  $("#partial-payment-task").fadeTo('slow', 0, function() {
  		$("#partial-payment-task").dialog('close');
  });
<% end -%>